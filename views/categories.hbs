<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />
        {{#if categories}}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                            <th></th> <!-- Empty header for remove column -->
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr>
                            <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
                            <td><a href="/items?category={{this.id}}">{{this.category}}</a></td>
                            <td><a href="/categories/delete/{{this.id}}" class="btn btn-danger">remove</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{else}}
            <p>{{message}}</p>
        {{/if}}
    </div>
</div>
